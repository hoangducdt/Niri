// Niri configuration converted from Hyprland
// See: https://github.com/YaLTeR/niri/wiki/Configuration:-Overview

// ################ Input ################
input {
    keyboard {
        xkb {
            layout "us"
        }
        repeat-delay 250
        repeat-rate 35
    }

    touchpad {
        tap
        natural-scroll
        dwt // disable-while-typing
        scroll-factor 0.3
        accel-speed 0.0
    }

    mouse {
        accel-speed 0.0
    }

    focus-follows-mouse max-scroll-amount="0%"
    workspace-auto-back-and-forth
}

// ################ Output ################
output "DP-1" {
    mode "2560x1080@99.94"
    position x=0 y=0
    scale 1.0
}

output "DP-3" {
    mode "1920x1080@74.97"
    position x=2560 y=0
    scale 1.0
}

// ################ Layout ################
layout {
    gaps 20
    center-focused-column "never"
    
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    focus-ring {
        width 3
        active-color "#bfc1ff" // $primary
        inactive-color "#46464f" // $onSurfaceVariant with alpha
        active-gradient from="#bfc1ff" to="#6f72ac" angle=45
    }

    border {
        width 3
        active-color "#bfc1ff" // $primary
        inactive-color "#46464f" // $onSurfaceVariant with alpha
        active-gradient from="#bfc1ff" to="#6f72ac" angle=45
    }

    struts {
        left 0
        right 0
        top 0
        bottom 0
    }
}

// ################ Cursor ################
cursor {
    xcursor-theme "sweet-cursors"
    xcursor-size 24
}

// ################ Environment ################
environment {
    // Themes
    QT_QPA_PLATFORMTHEME "qt6ct"
    QT_WAYLAND_DISABLE_WINDOWDECORATION "1"
    QT_AUTO_SCREEN_SCALE_FACTOR "1"
    XCURSOR_THEME "sweet-cursors"
    XCURSOR_SIZE "24"

    // Toolkit backends
    GDK_BACKEND "wayland,x11"
    QT_QPA_PLATFORM "wayland;xcb"
    SDL_VIDEODRIVER "wayland"
    CLUTTER_BACKEND "wayland"
    ELECTRON_OZONE_PLATFORM_HINT "auto"

    // XDG specifications
    XDG_CURRENT_DESKTOP "niri"
    XDG_SESSION_TYPE "wayland"
    XDG_SESSION_DESKTOP "niri"

    // Others
    _JAVA_AWT_WM_NONREPARENTING "1"

    // NVIDIA
    LIBVA_DRIVER_NAME "nvidia"
    GBM_BACKEND "nvidia-drm"
    __GLX_VENDOR_LIBRARY_NAME "nvidia"
    WLR_NO_HARDWARE_CURSORS "1"

    // Vietnamese Input - Fcitx5
    XMODIFIERS "@im=fcitx"
    SDL_IM_MODULE "fcitx"
    GLFW_IM_MODULE "fcitx"
}

// ################ Spawn at Startup ################
spawn-at-startup "gnome-keyring-daemon" "--start" "--components=secrets"
spawn-at-startup "/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1"
spawn-at-startup "wl-paste" "--type" "text" "--watch" "cliphist" "store"
spawn-at-startup "wl-paste" "--type" "image" "--watch" "cliphist" "store"
spawn-at-startup "trash-empty" "30"
spawn-at-startup "/usr/lib/geoclue-2.0/demos/agent"
spawn-at-startup "sh" "-c" "sleep 1 && gammastep"
spawn-at-startup "mpris-proxy"
spawn-at-startup "sh" "-c" "sleep 2 && fcitx5"
spawn-at-startup "sh" "-c" "sleep 3 && steam"
spawn-at-startup "sh" "-c" "sleep 4 && vesktop"

// ################ Animations ################
animations {
    window-open {
        duration-ms 300
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 250
        curve "ease-in-expo"
    }

    window-movement {
        duration-ms 250
        curve "ease-out-cubic"
    }

    workspace-switch {
        duration-ms 300
        curve "ease-out-cubic"
    }

    horizontal-view-movement {
        duration-ms 300
        curve "ease-out-cubic"
    }

    window-resize {
        duration-ms 200
        curve "ease-out-cubic"
    }

    config-notification-open-close {
        duration-ms 200
        curve "ease-out-cubic"
    }
}

// ################ Window Rules ################
window-rule {
    match app-id="kitty|org.quickshell|imv|swappy"
    opacity 1.0
}

window-rule {
    match app-id="^(?!kitty|org.quickshell|imv|swappy).*$"
    opacity 0.95
}

window-rule {
    match app-id="firefox"
    opacity 0.90
}

window-rule {
    match app-id="microsoft-edge-stable|brave-browser"
    opacity 0.90
}

window-rule {
    match app-id="code-oss|[Cc]ode|codium|code-url-handler|code-insiders-url-handler"
    opacity 0.80
}

window-rule {
    match app-id="thunar|org.kde.dolphin|org.kde.ark"
    opacity 0.80
}

window-rule {
    match app-id="org.pulseaudio.pavucontrol|blueman-manager|nm-applet|nm-connection-editor"
    opacity 0.80
}

window-rule {
    match app-id="[Ss]team|steamwebhelper|[Ss]potify"
    opacity 0.70
}

window-rule {
    match app-id="vesktop|discord|WebCord|ArmCord"
    opacity 0.80
}

// Float windows
window-rule {
    match app-id="guifetch|yad|zenity|wev|file-roller|blueman-manager|feh|imv|system-config-printer|org.quickshell"
    default-column-width { proportion 0.5; }
}

window-rule {
    match app-id="org.gnome.Settings"
    default-column-width { proportion 0.7; }
}

window-rule {
    match app-id="org.pulseaudio.pavucontrol|yad-icon-browser|nwg-look"
    default-column-width { proportion 0.6; }
}

// ################ Prefer No CSD ################
prefer-no-csd

// ################ Screenshot Path ################
screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// ################ Hotkey Overlay ################
hotkey-overlay {
    skip-at-startup
}

// ################ Keybinds ################
binds {
    // Mod key
    Mod+Shift+Slash { show-hotkey-overlay; }

    // Apps
    Mod+T { spawn "kitty"; }
    Mod+W { spawn "microsoft-edge-stable"; }
    Mod+C { spawn "codium"; }
    Mod+E { spawn "thunar"; }
    Mod+Alt+E { spawn "nemo"; }
    Mod+G { spawn "github-desktop"; }
    Ctrl+Alt+Escape { spawn "qps"; }
    Ctrl+Alt+V { spawn "pavucontrol"; }

    // Window management
    Mod+Q { close-window; }
    Mod+F { fullscreen-window; }
    Mod+P { toggle-window-pin; }
    
    // Focus
    Mod+Left  { focus-column-left; }
    Mod+Right { focus-column-right; }
    Mod+Up    { focus-window-up; }
    Mod+Down  { focus-window-down; }
    Mod+H     { focus-column-left; }
    Mod+L     { focus-column-right; }
    Mod+K     { focus-window-up; }
    Mod+J     { focus-window-down; }

    // Move windows
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+H     { move-column-left; }
    Mod+Shift+L     { move-column-right; }
    Mod+Shift+K     { move-window-up; }
    Mod+Shift+J     { move-window-down; }

    // Resize
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }

    // Column width presets
    Mod+R { reset-window-height; }
    Mod+Shift+R { reset-column-width; }
    Mod+Comma { consume-or-expel-window-left; }
    Mod+Period { consume-or-expel-window-right; }

    // Workspaces (using numbers 1-10)
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+0 { focus-workspace 10; }

    // Move window to workspace
    Mod+Alt+1 { move-column-to-workspace 1; }
    Mod+Alt+2 { move-column-to-workspace 2; }
    Mod+Alt+3 { move-column-to-workspace 3; }
    Mod+Alt+4 { move-column-to-workspace 4; }
    Mod+Alt+5 { move-column-to-workspace 5; }
    Mod+Alt+6 { move-column-to-workspace 6; }
    Mod+Alt+7 { move-column-to-workspace 7; }
    Mod+Alt+8 { move-column-to-workspace 8; }
    Mod+Alt+9 { move-column-to-workspace 9; }
    Mod+Alt+0 { move-column-to-workspace 10; }

    // Workspace navigation
    Ctrl+Mod+Right { focus-workspace-down; }
    Ctrl+Mod+Left  { focus-workspace-up; }
    Mod+Page_Down  { focus-workspace-down; }
    Mod+Page_Up    { focus-workspace-up; }
    Mod+WheelScrollDown cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp   cooldown-ms=150 { focus-workspace-up; }

    // Move to next/prev workspace
    Mod+Alt+Page_Down { move-column-to-workspace-down; }
    Mod+Alt+Page_Up   { move-column-to-workspace-up; }
    Ctrl+Mod+Shift+Right { move-column-to-workspace-down; }
    Ctrl+Mod+Shift+Left  { move-column-to-workspace-up; }

    // Move workspace between monitors
    Mod+Shift+Ctrl+Left  { move-workspace-to-monitor-left; }
    Mod+Shift+Ctrl+Right { move-workspace-to-monitor-right; }
    Mod+Shift+Ctrl+Up    { move-workspace-to-monitor-up; }
    Mod+Shift+Ctrl+Down  { move-workspace-to-monitor-down; }

    // Monitors
    Mod+Shift+Left+Alt  { focus-monitor-left; }
    Mod+Shift+Right+Alt { focus-monitor-right; }
    Mod+Shift+Up+Alt    { focus-monitor-up; }
    Mod+Shift+Down+Alt  { focus-monitor-down; }

    // Screenshots
    Print { screenshot; }
    Mod+Shift+S { screenshot-screen; }
    Ctrl+Print { screenshot-window; }

    // Volume
    XF86AudioRaiseVolume allow-when-locked=true { spawn "wpctl" "set-volume" "-l" "1" "@DEFAULT_AUDIO_SINK@" "10%+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "wpctl" "set-volume" "@DEFAULT_AUDIO_SINK@" "10%-"; }
    XF86AudioMute        allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    Mod+Shift+M          allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SINK@" "toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn "wpctl" "set-mute" "@DEFAULT_AUDIO_SOURCE@" "toggle"; }

    // Media controls
    XF86AudioPlay  allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioPause allow-when-locked=true { spawn "playerctl" "play-pause"; }
    Ctrl+Mod+Space allow-when-locked=true { spawn "playerctl" "play-pause"; }
    XF86AudioNext  allow-when-locked=true { spawn "playerctl" "next"; }
    Ctrl+Mod+Equal allow-when-locked=true { spawn "playerctl" "next"; }
    XF86AudioPrev  allow-when-locked=true { spawn "playerctl" "previous"; }
    Ctrl+Mod+Minus allow-when-locked=true { spawn "playerctl" "previous"; }
    XF86AudioStop  allow-when-locked=true { spawn "playerctl" "stop"; }

    // Brightness
    XF86MonBrightnessUp   allow-when-locked=true { spawn "brightnessctl" "set" "+10%"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "set" "10%-"; }

    // Utilities
    Mod+V { spawn "sh" "-c" "pkill fuzzel || cliphist list | fuzzel --dmenu | cliphist decode | wl-copy"; }
    Mod+Period { spawn "sh" "-c" "pkill fuzzel || fuzzel-emoji"; }
    Mod+Shift+C { spawn "hyprpicker" "-a"; }

    // Lock and power
    Mod+L { spawn "swaylock"; }
    Mod+Shift+L { spawn "systemctl" "suspend-then-hibernate"; }
    Ctrl+Alt+Delete { spawn "wlogout"; }

    // Niri specific
    Mod+Shift+E { quit; }
    Mod+Shift+P { power-off-monitors; }
    
    // Switch layouts
    Mod+Alt+Space { switch-layout "next"; }

    // Tab through windows
    Alt+Tab { focus-window-down-or-right; }
    Alt+Shift+Tab { focus-window-up-or-left; }
}

// ################ Debug ################
debug {
    preview-render "off"
    wait-for-frame-completion-before-queueing
    enable-color-transformations-capability
    render-drm-device "/dev/dri/renderD128"
}